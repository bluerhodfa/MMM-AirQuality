<div class="small light">
    {% if message %}
        {{ message|safe }}
    {% elif loaded %}
        <div class="medium" style="color: {{ colour }}"><i class="fa-solid fa-smog"></i> {{ impact }}{% if showIndex %} ({{ index }}){% endif %}</div>
            {% if showLocation %}
        <div class="small">{{ city }}</div>
            {% endif %}
        {% if showPollutants %}    
        <br>
        <div>
            <table class="small">
                <thead>
                    <tr style="opacity: 1;">
                        Pollutant concentration in μg/m
                        <sup>3</sup>
                    </tr>
                </thead>
                <tbody>
                <tr style="opacity: 1;">
                    <td class="align-right bright">
                        SO
                        <sub>2</sub>
                    </td>
                    <td class="align-right bright">
                        NO
                        <sub>2</sub>
                    </td>
                    <td class="align-right bright">
                        PM
                        <sub>10</sub>
                    </td>
                    <td class="align-right bright">
                        PM
                        <sub>2.5</sub>
                    </td>
                    <td class="align-right bright">
                        O
                        <sub>3</sub>
                    </td>
                    <td class="align-right bright">
                       CO
                    </td>
                </tr>
                <tr>
                    <td class="align-right bright">
                      {{ so2 }}
                    </td>
                    <td class="align-right bright">
                      {{ no2 }}
                    </td>
                    <td class="align-right bright">
                      {{ pm10 }}
                    </td>
                    <td class="align-right bright">
                      {{ pm2_5 }}
                    </td>
                    <td class="align-right bright">
                      {{ o3 }}
                    </td>
                    <td class="align-right bright">
                      {{ co }}
                    </td>
                </tr>
                </tbody>
                </table>
                <table class="small">
                    <thead>
                        <tr style="opacity 1;">
                            Other pollutants that do not affect the AQI calculation:
                        </tr>
                    </thead>
                    <tbody>
                    <td class="align-right bright">
                         NH
                        <sub>3</sub>
                    </td>
                    <td class="align-right bright">
                         NO
                    </td>
                </tr>
                <tr style="opacity 1;">
                    <td class="aligh-right bright"> 
                        {{ ... }}
                    </td>
                    <td class="aligh-right bright"> 
                        {{ ... }}
                    </td>
                    <td class="aligh-right bright"> 
                        {{ ... }}
                    </td>
                    <td class="aligh-right bright"> 
                        {{ ... }}
                    </td>
                    <td class="aligh-right bright"> 
                        {{ nh3 }}
                    </td>
                    <td class="aligh-right bright"> 
                        {{ no }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        {% endif %}
    {% else %}
        <div class="dimmed light small">
            {{ labelLoading|safe }}
        </div>
    {% endif %}
</div>